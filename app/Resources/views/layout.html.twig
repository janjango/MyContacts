<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>MyContacts</title>

        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('/bundles/app/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="{{ asset('/bundles/app/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">

        <!-- DataTables CSS -->
        <link href="{{ asset('/bundles/app/vendor/datatables-plugins/dataTables.bootstrap.css ') }}" rel="stylesheet">

        <!-- DataTables Responsive CSS -->
        <link href="{{ asset('/bundles/app/vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
        <!-- Custom  CSS -->
        <link href="{{ asset('/bundles/app/css/sb-admin-2.css') }}" rel="stylesheet">
        <link href="{{ asset('/bundles/app/css/style.css') }}" rel="stylesheet">
        {% block stylesheets %}    {% endblock %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>

    <body>

        <div id="wrapper">

            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}"> <i class="fa fa-phone-square fa-fw"> </i> MyContacts</a>
                </div>
                <!-- /.navbar-header -->

                <ul class="nav navbar-top-links navbar-collapse navbar-right">
                    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED")  %}
                        <!-- /.dropdown -->
                        <li>
                            <a href="{{ path("fos_user_registration_register") }}">
                                <i class="fa fa-user fa-fw"></i> Inscription
                            </a>
                            <!-- /.dropdown-user -->
                        </li>
                        <!-- /.dropdown -->
                        <!-- /.dropdown -->
                        <li>
                            <a href="{{ path("fos_user_security_login") }}">
                                <i class="fa fa-lock fa-fw"></i> Connexion
                            </a>
                            <!-- /.dropdown-user -->
                        </li>
                        <!-- /.dropdown -->
                    {% else %}
                        <!-- /.dropdown -->
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-user fa-fw"></i> {{ app.user.firstName  ~'  '~  app.user.lastName }} <i class="fa fa-caret-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                                </li>
                        </li>
                        <li class="divider"></li>
                        <li><a href="{{ path("fos_user_security_logout") }}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                    </li>
                    <!-- /.dropdown -->
                {% endif %}
                </ul>
                <!-- /.navbar-top-links -->

            </nav>

            <div class="container">
                {% block container %}
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="page-header" style="font-weight: bold;">   {% block title %}  Liste de mes contacts  {% endblock %} </h4>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <img src="/bundles/app/images/reseau-de-contact.png" alt="RÃ©seau de contact" class="img img-circle" style="width: 100%; height: 100%;margin-top: -7%;">
                        <div class="col-lg-12" style="margin-top: -58%;">
                            {% block content %}
                                {% include 'contact/content.html.twig'%}
                            {% endblock %}
                            </div>


                        </div>

                    </div>

                </div>
                <!-- /#page-wrapper -->
            {% endblock %}
        </div>
        <!-- /#wrapper -->
        {% block javascripts %}
        <!-- jQuery -->
        <script src="{{ asset('/bundles/app/vendor/jquery/jquery.min.js') }}"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('/bundles/app/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('/bundles/app/js/sb-admin-2.js') }}"></script>
        <!-- DataTables JavaScript -->
        <script src="{{ asset('/bundles/app/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('/bundles/app/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
        <script src="{{ asset('/bundles/app/vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
        <script src="{{ asset('/bundles/app/js/script.js') }}"></script>
        {% endblock %} 
    </body>

</html>
