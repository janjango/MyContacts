<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>MyContacts</title>

        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('/bundles/app/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="{{ asset('/bundles/app/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">

        <!-- DataTables CSS -->
        <link href="{{ asset('/bundles/app/vendor/datatables-plugins/dataTables.bootstrap.css ') }}" rel="stylesheet">

        <!-- DataTables Responsive CSS -->
        <link href="{{ asset('/bundles/app/vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
        <!-- Custom  CSS -->
        <link href="{{ asset('/bundles/app/css/sb-admin-2.css') }}" rel="stylesheet">
        <link href="{{ asset('/bundles/app/css/style.css') }}" rel="stylesheet">
        {% block stylesheets %}    {% endblock %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>

    <body>

        <div id="wrapper">

            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}"> <i class="fa fa-phone-square fa-fw"> </i> MyContacts</a>
                </div>
                <!-- /.navbar-header -->

                <ul class="nav navbar-top-links navbar-collapse navbar-right">
                    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED")  %}
                        <!-- /.dropdown -->
                        <li>
                            <a href="{{ path("fos_user_registration_register") }}">
                                <i class="fa fa-user fa-fw"></i> Inscription
                            </a>
                            <!-- /.dropdown-user -->
                        </li>
                        <!-- /.dropdown -->
                        <!-- /.dropdown -->
                        <li>
                            <a href="{{ path("fos_user_security_login") }}">
                                <i class="fa fa-lock fa-fw"></i> Connexion
                            </a>
                            <!-- /.dropdown-user -->
                        </li>
                        <!-- /.dropdown -->
                    {% else %}
                        <!-- /.dropdown -->
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-user fa-fw"></i> {{ app.user.firstName  ~'  '~  app.user.lastName }} <i class="fa fa-caret-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                                </li>
                        </li>
                        <li class="divider"></li>
                        <li><a href="{{ path("fos_user_security_logout") }}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                    </li>
                    <!-- /.dropdown -->
                {% endif %}
                </ul>
                <!-- /.navbar-top-links -->

            </nav>

            <div class="container">
                {% block container %}
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="page-header" style="font-weight: bold;">   {% block title %}  Liste de mes contacts  {% endblock %} </h4>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <img src="/bundles/app/images/reseau-de-contact.png" alt="Réseau de contact" class="img img-circle" style="width: 100%; height: 100%;margin-top: -7%;">
                        <div class="col-lg-12" style="margin-top: -58%;">
                            {% block content %}

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Répertoire

                                        <a href="{{ path('contact_new') }}" class=" btn btn-success btn-xs  "  style="float: right;font-size: 13px;"> <i class="fa fa-phone"> </i> Nouveau Contact <i class="fa fa-plus"> </i>  </a>
                                    </div>
                                    <!-- /.panel-heading -->
                                    <div class="panel-body">
                                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                                        <thead>
                                                            <tr role="row">
                                                                <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 88px;">
                                                                    Nom du contact</th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 111px;text-align: center;">
                                                                    Addresses</th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 100px;text-align: center;">
                                                                    Phone</th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 75px;text-align: center;">
                                                                    Sites web</th>
                                                                <th class="sorting" tabindex="0"  aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 53px;text-align: center;">
                                                                    Profession </th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 53px;text-align: center;">
                                                                    Activités </th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 53px;text-align: center;">
                                                                    Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for contact in contacts %}
                                                                <tr class="gradeA odd" role="row">
                                                                    <td class="sorting_1"> {{ contact.name }}</td>
                                                                    <td >{{ contact.address }}</td>
                                                                    <td>{{ contact.phone }}</td>
                                                                    <td>{{ contact.website }}</td>
                                                                    <td>{{ contact.profession }}</td>
                                                                    <td>{{ contact.activities }}</td>
                                                                    <td>
                                                                        <a href="{{ path('contact_edit', {'id':  contact.id }) }}" class="btn btn-sm btn-warning" style="float: left;font-size: 11px;text-align: center;"><i class="fa  fa-pencil"></i> </a>
                                                                        <a href="{{ path('contact_delete', {'id':  contact.id }) }}" class="btn btn-sm btn-danger" style="float: left;font-size: 11px;margin-left: 2px;text-align: center;"><i class="fa  fa-trash-o"></i> </a>
                                                                    </td>
                                                                </tr>
                                                            {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>

                                        </div>
                                        <!-- /.panel-body -->
                                    </div>
                                {% endblock %}
                            </div>


                        </div>

                    </div>

                </div>
                <!-- /#page-wrapper -->
            {% endblock %}
        </div>
        <!-- /#wrapper -->

        <!-- jQuery -->
        <script src="{{ asset('/bundles/app/vendor/jquery/jquery.min.js') }}"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('/bundles/app/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('/bundles/app/js/sb-admin-2.js') }}"></script>
        <!-- DataTables JavaScript -->
        <script src="{{ asset('/bundles/app/vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('/bundles/app/vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
        <script src="{{ asset('/bundles/app/vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
        <script src="{{ asset('/bundles/app/js/script.js') }}"></script>
    </body>

</html>
