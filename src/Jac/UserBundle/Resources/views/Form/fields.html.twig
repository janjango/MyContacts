{% trans_default_domain 'FOSUserBundle' %}
{% block jac_user_registration_widget %}
    {% spaceless %}
        <fieldset>
            <legend>{{ "registration.legend.1" | trans }}</legend>

            {#{{ form_errors(form) }}   #}

            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_widget(form.username, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.name'|trans}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="form-group col-sm-5">
                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.form_email'|trans}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group col-sm-3">
                    {{ form_widget(form.plainPassword, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.password'|trans}}) }}
                    {{ form_errors(form.plainPassword) }}
                </div>
            </div>

            <legend>{{ "registration.legend.2" | trans }}</legend>
            <div class="row">
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.gender, label|default('Civilité'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9 ">

                    {{ form_widget(form.gender, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.phone'|trans}}) }}
                    {{ form_errors(form.gender) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.firstname, label|default('registration.firstname'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9 ">
                    {{ form_widget(form.firstname, {'attr' : {'class' : 'form-control', 'placeholder' : ''|trans}}) }}
                    {{ form_errors(form.firstname) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.lastname, label|default('registration.lastname'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9 ">
                    {{ form_widget(form.lastname, {'attr' : {'class' : 'form-control', 'placeholder' : ''|trans}}) }}
                    {{ form_errors(form.lastname) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.phone, label|default('Téléphone'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9 ">
                    <div class="input-group">
                        {{ form_widget(form.phone, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.phone'|trans}}) }}
                    </div>
                    {{ form_errors(form.phone) }}
                </div>
            </div>

            {{ form_rest(form) }}
        </fieldset>
    {% endspaceless %}
{% endblock %}
